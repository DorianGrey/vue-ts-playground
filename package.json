{
  "name": "vue-ts-playground",
  "description": "Playground project using Vue.js and typescript",
  "author": {
    "name": "Christian Linne",
    "email": "ShadowVampire@web.de"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "serve": "node scripts/serve.js",
    "test": "node scripts/test.js",
    "test:ci": "node scripts/test.js --no-cache --coverage",
    "test:debug": "node --inspect --debug-brk scripts/test.js",
    "test:ci:debug": "node --inspect --debug-brk scripts/test.js --no-cache --coverage",
    "format": "prettier --write \"{src,scripts,config}/**/*.{js,ts}\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,scripts,config}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "av-ts": "^0.8.2",
    "bulma": "^0.4.3",
    "bulmaswatch": "^0.4.2",
    "font-awesome": "^4.7.0",
    "sanitize.css": "^5.0.0",
    "tslib": "^1.7.1",
    "vee-validate": "2.0.0-rc.6",
    "vue": "^2.4.1",
    "vue-carousel-3d": "^0.1.18",
    "vue-i18n": "^7.0.5",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/webpack-env": "^1.13.0",
    "autoprefixer": "^7.1.2",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.0.1",
    "compression": "^1.7.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "fork-ts-checker-webpack-plugin": "^0.2.6",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^3.0.1",
    "glob-all": "^3.1.0",
    "gzip-size": "^3.0.0",
    "html-webpack-plugin": "^2.29.0",
    "http-proxy": "^1.16.2",
    "husky": "^0.14.3",
    "image-webpack-loader": "^3.3.1",
    "imports-loader": "^0.7.1",
    "inline-chunk-manifest-html-webpack-plugin": "^1.1.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^2.0.0",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.2",
    "progress-bar-webpack-plugin": "^1.10.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "resolve-url-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "strip-ansi": "^4.0.0",
    "style-loader": "^0.18.2",
    "stylelint": "^7.13.0",
    "stylelint-formatter-pretty": "^1.0.3",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-webpack-plugin": "^0.8.0",
    "ts-jest": "^20.0.7",
    "ts-loader": "^2.2.2",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.4.1",
    "url-loader": "^0.5.9",
    "vue-loader": "^13.0.1",
    "vue-template-compiler": "^2.4.1",
    "vue-template-loader": "^0.3.1",
    "webpack": "^3.2.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.5.1",
    "webpack-karma-die-hard": "^1.0.4",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.spec.{js,ts}",
      "!src/{index,bootloader}.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./test-results/coverage",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)spec.ts"
    ],
    "transform": {
      "^.+\\.(svg|gif|png|jpe?g)$": "<rootDir>/config/jest/fileTransform.js",
      "^.+\\.s?css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*\\.(vue)$": "<rootDir>/config/jest/vueTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|ts)$"
    ]
  }
}
