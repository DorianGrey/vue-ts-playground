{
  "name": "vue-ts-playground",
  "version": "0.1.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:prod": "node scripts/serve.prod.js",
    "build": "vue-cli-service build --modern",
    "lint": "vue-cli-service lint --fix && stylelint \"src/**/*.{scss,vue}\"",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "vue-cli-service test:unit --watch",
    "test:unit:ci": "vue-cli-service test:unit --no-cache --coverage",
    "test:e2e": "vue-cli-service test:e2e",
    "test:e2e:headless": "vue-cli-service test:e2e --headless",
    "format": "prettier --write \"{src,scripts,config,tests}/**/*.{js,ts,vue}\""
  },
  "dependencies": {
    "core-js": "^2.5.7",
    "lodash-es": "^4.17.11",
    "register-service-worker": "1.5.2",
    "rxjs": "^6.3.3",
    "sanitize.css": "^8.0.0",
    "tslib": "^1.9.3",
    "vee-validate": "2.0.9",
    "vue": "^2.5.16",
    "vue-carousel-3d": "^0.1.23",
    "vue-class-component": "^6.0.0",
    "vue-i18n": "^8.1.0",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.1",
    "vue-rx": "^6.0.1",
    "vuetify": "^1.2.7",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@types/jest": "^23.3.5",
    "@types/lodash-es": "4.17.1",
    "@types/webfontloader": "^1.6.29",
    "@types/webpack-env": "^1.13.6",
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-e2e-cypress": "^3.0.5",
    "@vue/cli-plugin-pwa": "^3.0.5",
    "@vue/cli-plugin-typescript": "^3.0.5",
    "@vue/cli-plugin-unit-jest": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "7.0.0-bridge.0",
    "globby": "^8.0.1",
    "husky": "^1.1.1",
    "jest-junit": "^5.2.0",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^7.3.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.9.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "prettier": "^1.14.3",
    "purgecss-webpack-plugin": "^1.3.1",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-formatter-pretty": "^1.0.3",
    "stylelint-scss": "^3.3.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-jest": "^23.1.4",
    "tslint-config-prettier": "^1.15.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.1.2",
    "vue-template-compiler": "^2.5.16"
  },
  "description": "Playground project using Vue.js and typescript",
  "author": {
    "name": "Christian Linne",
    "email": "ShadowVampire@web.de"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:unit:ci"
    }
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint --fix",
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint --fix",
      "stylelint",
      "prettier --write",
      "git add"
    ]
  },
  "jest-junit": {
    "output": "./test-results/junit/junit.xml"
  }
}
